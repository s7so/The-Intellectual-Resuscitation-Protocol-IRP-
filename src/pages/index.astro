---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import SocialProof from "../components/SocialProof.astro";
import Philosophy from "../components/Philosophy.astro";
import Projects from "../components/Projects.astro";
import Footer from "../components/Footer.astro";

const title = "موقع حسين - مهندس برمجيات ومعلم";
const description = "أعرض أعمالي ومنهجيتي \"طريقة حسين\" لبناء منتجات برمجية بسرعة واحترافية.";
---
<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0ea5e9" />
    <script type="module">
      import "../scripts/home-animations.ts";
    </script>
  </head>
  <body>
    <Header />
    <main>
      <Hero />
      <SocialProof />
      <Philosophy />
      <Projects />
    </main>
    <Footer />
  </body>
  
</html>
